<h3>{{viewTitle}}</h3>
<form action="/category" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{category._id}}">
    <div class="form-group">
        <label>ID</label>
        <input type="text" class="form-control" name="ID" value="{{category.ID}}" placeholder="ID">
        <div class="text-danger">
            {{category.IDError}}
        </div>
    </div>
    <div class="form-group">
        <label>Category Name</label>
        <input type="text" class="form-control" name="Category_Name" value="{{category.Category_Name}}" placeholder="Category Name">
        <div class="text-danger">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group md-6">
            <label>Desciption</label>
            <input type="text" name="Description" placeholder="Description" value="{{category.Description}}" class="form-control">

        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/category/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>